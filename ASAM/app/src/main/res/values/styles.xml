<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

	<style name="asam_theme" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/md_blue_grey_600</item>
        <item name="colorPrimaryDark">@color/md_blue_grey_800</item>
        <item name="colorAccent">@color/md_teal_A700</item>

        <item name="alertDialogTheme">@style/AppCompatAlertDialogStyle</item>

        <item name="android:spinnerStyle">@style/Widget.AppCompat.Spinner.Underlined</item>

        <item name="android:colorButtonNormal">@color/md_teal_A700</item>
    </style>

    <style name="asam_theme_search" parent="@style/Theme.AppCompat.Light.DialogWhenLarge">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:spinnerStyle">@style/Widget.AppCompat.Spinner.Underlined</item>

        <item name="colorPrimary">@color/md_blue_grey_600</item>
        <item name="colorPrimaryDark">@color/md_blue_grey_800</item>
        <item name="colorAccent">@color/md_teal_A700</item>
    </style>

    <style name="AppCompatAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorPrimary">@color/md_blue_grey_600</item>
        <item name="colorPrimaryDark">@color/md_blue_grey_800</item>
        <item name="colorAccent">@color/md_teal_A700</item>
    </style>

    <style name="MapText">
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#777777</item>
        <item name="android:shadowColor">#FFFFFF</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>
        <item name="android:shadowRadius">2.0</item>
    </style>

    <style name="AsamReportHeader">
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AsamReportSubHeader">
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="AsamReportContent">
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">14sp</item>
        <item name="android:alpha">.7</item>
    </style>

    <style name="ListSubHeader">
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#8A000000</item>
    </style>

    <style name="ListTextPrimary">
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ListTextPrimaryLabel">
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">16sp</item>
        <item name="android:alpha">.7</item>
    </style>

    <style name="ListTextSecondary">
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">14sp</item>
        <item name="android:alpha">.7</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">#1f000000</item>
    </style>

</resources>