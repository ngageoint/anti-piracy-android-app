<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    
    <style name="SelectableTableRow">
     	<item name="android:background">@android:drawable/list_selector_background</item>
	</style>

	<style name="asam_base_theme" parent="@style/Theme.AppCompat">
	</style>

    <style name="asam_theme" parent="asam_base_theme">
        <item name="android:textColor">@color/asam_text_color</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="horizontal_divider">
    	<item name="android:layout_width">match_parent</item>
    	<item name="android:layout_height">1dp</item>
    	<item name="android:background">@color/list_divider_color</item>
	</style>

    <style name="asam_theme_search" parent="@style/Theme.AppCompat.DialogWhenLarge">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:spinnerStyle">@style/Widget.AppCompat.Spinner.Underlined</item>
    </style>
    
