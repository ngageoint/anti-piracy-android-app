<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:baselineAligned="false">
    
    <fragment android:id="@+id/legal_tablet_legal_fragment"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        class="mil.nga.giat.asam.LegalFragment"
        />

    <FrameLayout android:id="@+id/legal_tablet_legal_details_fragment"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:background="@color/legal_fragment_background_color"
        />
    
</LinearLayout>